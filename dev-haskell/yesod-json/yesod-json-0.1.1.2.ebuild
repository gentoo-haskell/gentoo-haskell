		-e 's@aeson                     >= 0.3.1.1  && < 0.3.2.10@aeson                     >= 0.3.1.1  \&\& < 0.4@' \
		-i "${S}/${PN}.cabal" || die "Could not loosen blaze-textual and aeson dependencies"
}
