src_prepare() {
	cd "${S}"
	sed -e 's@dbus-client >= 0.3 && < 0.4@dbus-client >= 0.3 \&\& < 0.5@' \
		-i "${S}/${PN}.cabal" || die "Could not loosen dbus-client dependency"
	epatch "${FILESDIR}/${P}-dbus-client-0.4.patch"
}
