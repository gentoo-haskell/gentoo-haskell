EAPI=7

# ebuild generated by hackport 0.6.3

CABAL_FEATURES=""
inherit haskell-cabal

DESCRIPTION="RPM packaging tool for Haskell Cabal-based packages"
HOMEPAGE="https://github.com/juhp/cabal-rpm"
SRC_URI="https://hackage.haskell.org/package/${P}/${P}.tar.gz"

LICENSE="GPL-3"
SLOT="0"
KEYWORDS="~amd64 ~x86"
IUSE="curl -old-locale"

RDEPEND=">dev-haskell/cabal-1.10:=
	>=dev-haskell/simple-cabal-0.1.0:=
	>=dev-haskell/simple-cmd-0.2.0:=
	>=dev-haskell/simple-cmd-args-0.1.2:=
	dev-haskell/curl:=
	dev-haskell/optparse-applicative:=
	>=dev-lang/ghc-8.0:=
	old-locale? ( >=dev-haskell/old-locale-1:= <dev-haskell/old-locale-1.1:= )
	curl? ( dev-haskell/curl:= )
	!curl? ( >=dev-haskell/http-client-0.4.30:=
		dev-haskell/http-client-tls:=
		dev-haskell/http-conduit:= )
"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-1.6
"

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag curl curl) \
		$(cabal_flag old-locale old-locale)
}
