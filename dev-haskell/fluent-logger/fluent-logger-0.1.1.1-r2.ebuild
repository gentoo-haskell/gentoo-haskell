DEPEND="${RDEPEND}
		test? ( dev-haskell/attoparsec
			dev-haskell/conduit
			dev-haskell/hspec
			dev-haskell/network-conduit
			dev-haskell/transformers
		)
		>=dev-haskell/cabal-1.8"

