		'containers     == 0.4.*' 'containers     >= 0.4' \
		'uu-parsinglib  >= 2.7.1  && < 2.8' 'uu-parsinglib  >= 2.7.1' \
		'ListLike       == 3.1.*' 'ListLike       >= 3.1'
}
