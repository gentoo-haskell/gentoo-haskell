	>=dev-lang/ghc-8.6.3:=
"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-2.4.0.1
"

src_prepare() {
	default

	cabal_chdeps \
		'base                 >=4.12 && <4.15' 'base >=4.12'
}

src_configure() {
	haskell-cabal_src_configure\
		$(cabal_flag executable executables)
}
