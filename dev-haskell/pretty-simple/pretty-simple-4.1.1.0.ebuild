	test? ( >=dev-haskell/doctest-0.13
		dev-haskell/glob
		dev-haskell/quickcheck )
"

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag examples buildexample) \
		$(cabal_flag executable buildexe)
}
