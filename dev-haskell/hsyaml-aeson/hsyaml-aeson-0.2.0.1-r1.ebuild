EAPI=8

# ebuild generated by hackport 0.8.4.0.9999
#hackport: flags: exe:executable

CABAL_HACKAGE_REVISION=6
CABAL_PN="HsYAML-aeson"

CABAL_FEATURES="lib profile haddock hoogle hscolour"
inherit haskell-cabal

DESCRIPTION="JSON to YAML Adapter"
HOMEPAGE="https://hackage.haskell.org/package/HsYAML-aeson"

LICENSE="GPL-2+"
SLOT="0/${PV}"
KEYWORDS="~amd64"
IUSE="executable"

CABAL_CHDEPS=(
	'executable yaml-test' 'executable hsyaml-aeson-test'
)

RDEPEND="
	=dev-haskell/hsyaml-0.2*:=[profile?]
	>=dev-haskell/scientific-0.3.6.2:=[profile?]
	=dev-haskell/unordered-containers-0.2*:=[profile?]
	>=dev-haskell/vector-0.12.0.2:=[profile?] <dev-haskell/vector-0.14
	>=dev-lang/ghc-8.8.1:=
	|| (
		( >=dev-haskell/aeson-1.4 <dev-haskell/aeson-1.6 )
		( >=dev-haskell/aeson-2.0 <dev-haskell/aeson-2.2 )
	)
	dev-haskell/aeson:=[profile?]
	|| (
		( >=dev-haskell/text-1.2.3 <dev-haskell/text-1.3 )
		( >=dev-haskell/text-2.0 <dev-haskell/text-2.1 )
	)
	dev-haskell/text:=[profile?]
"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-3.0.0.0
"

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag executable exe)
}

pkg_postinst() {
	if use executable; then
		elog "The executable installed with this package (normally named 'yaml-test')"
		elog "has been renamed to 'hsyaml-aeson-test' to help prevent name collisions."
	fi

	haskell-cabal_pkg_postinst
}
