EAPI=8

# ebuild generated by hackport 0.9.0.0.9999
#hackport: flags: -homebrew-openssl,-macports-openssl,-use-pkg-config

CABAL_PN="HsOpenSSL"

CABAL_FEATURES="lib profile haddock hoogle hscolour test-suite"
inherit haskell-cabal

#Allow to compile with openssl>=3.0
# see https://github.com/haskell-cryptography/HsOpenSSL/issues/93
# and https://src.fedoraproject.org/rpms/ghc-HsOpenSSL/c/a3062db8017ceb96ccd18b915aa8e017c42b3a22?branch=rawhide
HCFLAGS="-optc=-Wno-incompatible-pointer-types" 

DESCRIPTION="Partial OpenSSL binding for Haskell"
HOMEPAGE="https://github.com/haskell-cryptography/HsOpenSSL"

LICENSE="public-domain"
SLOT="0/${PV}"
KEYWORDS="~amd64"
IUSE="fast-bignum"

RDEPEND=">=dev-haskell/network-2.1:=[profile?] <dev-haskell/network-3.3:=[profile?]
	>=dev-lang/ghc-9.0.2:=
	dev-libs/openssl
"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-3.4.1.0
"

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag fast-bignum fast-bignum) \
		--flag=-homebrew-openssl \
		--flag=-macports-openssl \
		--flag=-use-pkg-config
}
