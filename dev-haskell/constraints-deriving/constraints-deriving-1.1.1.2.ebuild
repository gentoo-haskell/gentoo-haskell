"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-2.2.0.1
	test? ( dev-haskell/ghc-paths
		>=dev-haskell/path-0.5.13
		dev-haskell/path-io )
"

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag constraints constraints) \
		$(cabal_flag debug debug) \
		$(cabal_flag examples examples)
}
