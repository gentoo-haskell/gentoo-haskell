EAPI=8

# ebuild generated by hackport 0.7.3.0

CABAL_FEATURES="lib profile haddock hoogle hscolour"
inherit haskell-cabal

DESCRIPTION="A binding to libffi"
HOMEPAGE="https://haskell.org/haskellwiki/Library/libffi"

LICENSE="BSD"
SLOT="0/${PV}"
KEYWORDS="~amd64"
IUSE="+ghc-bundled-libffi"

RDEPEND=">=dev-lang/ghc-8.4.3:=[profile?]
	!ghc-bundled-libffi? ( dev-libs/libffi )
"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-2.2.0.1
"
# NOTE: move pkgconfig dep to BDEPEND when bumping
BDEPEND="!ghc-bundled-libffi? ( virtual/pkgconfig )
"

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag ghc-bundled-libffi ghc-bundled-libffi)
}
