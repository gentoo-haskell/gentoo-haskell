EAPI="3"

CABAL_FEATURES="bin lib profile haddock hscolour hoogle"
inherit haskell-cabal pax-utils

DESCRIPTION="Safely evaluate Haskell expressions"
HOMEPAGE="http://code.haskell.org/mubot/"
SRC_URI="http://hackage.haskell.org/packages/archive/${PN}/${PV}/${P}.tar.gz"

LICENSE="BSD"
SLOT="0"
KEYWORDS="~amd64 ~x86"
IUSE=""

RDEPEND="dev-haskell/cabal
		>=dev-haskell/hint-0.3.1
		<dev-haskell/mtl-2.1
		>=dev-haskell/show-0.3
		dev-haskell/utf8-string
		>=dev-lang/ghc-6.10.1"
DEPEND="${RDEPEND}
		>=dev-haskell/cabal-1.6"

src_prepare() {
	# Compile with ghc 6.12.3 or ghc 7.0.1
	epatch "${FILESDIR}/${P}-ghc-6.12.3-ghc-7.0.1.patch"
	if has_version ">=dev-lang/ghc-7.0.1"; then
		sed -e 's@ghc-options:   -Wall -static -threaded -O2@ghc-options:   -Wall -static -threaded -O2 -rtsopts@g' \
			-i "${S}/${PN}.cabal" || die "Could not add -rtsopts to ${S}/${PN}.cabal"
	fi
}

src_install() {
	cabal_src_install
	# uses GHC-api which needs mmap('rwx') (bug #299709)
	pax-mark -m "${ED}/usr/bin/mueval-core"
}
