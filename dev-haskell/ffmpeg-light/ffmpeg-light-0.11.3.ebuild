	>=dev-haskell/cabal-1.22.2.0
	virtual/pkgconfig
"

PATCHES=(
	"${FILESDIR}"/${P}-either-5.patch
)

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag builddemo builddemo) \
		$(cabal_flag buildrasterdemo buildrasterdemo)
}
